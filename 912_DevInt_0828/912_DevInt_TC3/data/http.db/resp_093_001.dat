(function() {
  'use strict';

  angular
    .module('accela.core')
    .directive('aaSpaceContextMenu', function() {
      return {
        restrict: 'E',
        replace: true,
        template: '<div class="space-context-trigger" popover-template="\'views/automation/space-context-menu.html\'" popover-placement="{{popoverDirection}}" popover-trigger="focus" popover-class="space-context-menu-{{$index}}" tabindex="100"></div>',
        link: function (scope, element, attrs) {
          scope.popoverDirection = AccelaConfig.isRTL ? 'left' : 'right';
        }
      };
    });
})();